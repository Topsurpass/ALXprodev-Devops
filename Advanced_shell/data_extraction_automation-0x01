#!/bin/bash

# Define the input file
DATA_FILE="data.json"

# Check if the data file exists
if [ ! -f "$DATA_FILE" ]; then
    echo "Error: $DATA_FILE not found. Please run the previous script first."
    exit 1
fi

# Extract data using jq and format with awk and sed
NAME=$(jq -r '.name' "$DATA_FILE")
HEIGHT=$(jq -r '.height' "$DATA_FILE" | awk '{print $1 / 10}')  # Convert decimetres to metres
WEIGHT=$(jq -r '.weight' "$DATA_FILE" | awk '{print $1 / 10}')  # Convert hectograms to kg
TYPE=$(jq -r '.types[0].type.name' "$DATA_FILE")

# Format and print the output using sed for styling
OUTPUT="$NAME is of type $TYPE, weighs ${WEIGHT}kg, and is ${HEIGHT}m tall."
echo "$OUTPUT" | sed 's/^./\U&/'

# Optional: Save the output to a file
echo "$OUTPUT" | sed 's/^./\U&/' > pokemon_info.txt

echo "Extracted data has been saved to pokemon_info.txt"
